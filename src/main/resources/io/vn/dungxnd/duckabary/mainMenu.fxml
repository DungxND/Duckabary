<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="io.vn.dungxnd.duckabary.ui.DashboardController">
    <!-- Top bar -->
    <top>
        <HBox spacing="10" style="-fx-background-color: #34495E; -fx-padding: 10;">
         <ImageView fx:id="avatarButton" fitHeight="66.0" fitWidth="73.0" onMouseClicked="#handleAvatarChange" pickOnBounds="true" preserveRatio="true" />
            <Label prefHeight="67.0" prefWidth="191.0" style="-fx-font-size: 20; -fx-text-fill: white;" text="Library Management" />
        </HBox>
    </top>

    <!-- Main content -->
    <center>
        <StackPane fx:id="contentArea" style="-fx-padding: 20;">
            <Label style="-fx-font-size: 16;" text="Welcome to the Library Management System!" />
        </StackPane>
    </center>

    <!-- Sidebar menu (hidden by default) -->
    <left>
        <VBox fx:id="menuPane" alignment="TOP_LEFT" managed="true" prefWidth="200" spacing="10" style="-fx-background-color: #2C3E50; -fx-padding: 15;" visible="false">
            <Label style="-fx-font-size: 18; -fx-text-fill: white;" text="Functions" />
            <Button fx:id="docManagement" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-padding: 10;" text="Document Management" />
            <Button fx:id="userManagement" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-padding: 10;" text="User Management" />
            <Button fx:id="borrowedManagement" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-padding: 10;" text="Borrowed Management" />
            <Button fx:id="btnExit" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-padding: 10;" text="Exit" />
        </VBox>
    </left>
</BorderPane>
