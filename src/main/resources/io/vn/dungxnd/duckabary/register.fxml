<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml" alignment="CENTER" spacing="15" style="-fx-background-color: white; -fx-padding: 30;">
    <children>
        <!-- Username Field -->
        <VBox spacing="5" alignment="CENTER_LEFT">
            <Label text="Username" style="-fx-text-fill: #4C1D95; -fx-font-weight: bold;" />
            <TextField fx:id="usernameField" promptText="Enter your username" style="-fx-pref-width: 250;" />
        </VBox>

        <!-- Email Field -->
        <VBox spacing="5" alignment="CENTER_LEFT">
            <Label text="Email Address" style="-fx-text-fill: #4C1D95; -fx-font-weight: bold;" />
            <TextField fx:id="emailField" promptText="Enter your email" style="-fx-pref-width: 250;" />
        </VBox>

        <!-- Password Field -->
        <VBox spacing="5" alignment="CENTER_LEFT">
            <Label text="Password" style="-fx-text-fill: #4C1D95; -fx-font-weight: bold;" />
            <PasswordField fx:id="passwordField" promptText="Enter your password" style="-fx-pref-width: 250;" />
        </VBox>

        <!-- Confirm Password Field -->
        <VBox spacing="5" alignment="CENTER_LEFT">
            <Label text="Confirm Password" style="-fx-text-fill: #4C1D95; -fx-font-weight: bold;" />
            <PasswordField fx:id="confirmPasswordField" promptText="Re-enter your password" style="-fx-pref-width: 250;" />
        </VBox>

        <!-- Register Button -->
        <Button fx:id="registerButton" text="Register" style="-fx-background-color: #4C1D95; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 250; -fx-padding: 10;" />

        <!-- Back to Login Button -->
        <Button fx:id="backToLoginButton" text="Back to Login" style="-fx-background-color: transparent; -fx-text-fill: #4C1D95; -fx-border-color: #4C1D95; -fx-border-radius: 5; -fx-pref-width: 250; -fx-padding: 10;" />
    </children>
</VBox>
