<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<StackPane xmlns:fx="http://javafx.com/fxml/1" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
           prefHeight="274.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/23.0.1">
    <children>
        <BorderPane prefHeight="200.0" prefWidth="200.0" stylesheets="@../css/page/changePass.css">
