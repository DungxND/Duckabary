                <AnchorPane fx:id="titlePane" prefHeight="40.0" prefWidth="450.0" BorderPane.alignment="CENTER">
                    <children>
                        <Label layoutX="21.0" layoutY="6.0" text="Change password">
                            <font>
                                <Font size="18.0"/>
                            </font>
                        </Label>
                    </children>
                </AnchorPane>
            </top>
            <center>
                <AnchorPane fx:id="mainPane" prefHeight="226.0" prefWidth="450.0" BorderPane.alignment="CENTER">
                    <children>
                        <AnchorPane layoutX="20.0" layoutY="10.0" prefHeight="45.0" prefWidth="410.0">
                            <children>
                                <Label layoutX="10.0" layoutY="3.0" text="Old password:">
                                    <font>
                                        <Font size="13.0"/>
                                    </font>
                                </Label>
                                <PasswordField layoutX="10.0" layoutY="22.0" minHeight="0.0" minWidth="0.0"
                                               prefHeight="22.0" prefWidth="395.0"/>
                            </children>
                        </AnchorPane>
                        <AnchorPane layoutX="20.0" layoutY="70.0" prefHeight="45.0" prefWidth="410.0">
                            <children>
                                <Label layoutX="10.0" layoutY="3.0" text="New password:">
                                    <font>
                                        <Font size="13.0"/>
                                    </font>
                                </Label>
                                <PasswordField layoutX="10.0" layoutY="22.0" minHeight="0.0" minWidth="0.0"
                                               prefHeight="22.0" prefWidth="395.0"/>
                            </children>
                        </AnchorPane>
                        <AnchorPane layoutX="20.0" layoutY="130.0" prefHeight="45.0" prefWidth="410.0">
                            <children>
                                <Label layoutX="10.0" layoutY="3.0" text="Confirm new password:">
                                    <font>
                                        <Font size="13.0"/>
                                    </font>
                                </Label>
                                <PasswordField layoutX="10.0" layoutY="22.0" minHeight="0.0" minWidth="0.0"
                                               prefHeight="22.0" prefWidth="395.0"/>
                            </children>
                        </AnchorPane>
                        <Button fx:id="saveBut" layoutX="371.0" layoutY="205.0" minHeight="0.0" minWidth="0.0"
